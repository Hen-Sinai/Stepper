<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>

<TabPane fx:id="tabPane" nodeOrientation="LEFT_TO_RIGHT" stylesheets="@Body.css" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screen.BodyController">
    <Tab fx:id="usersManagementTab" closable="false" text="Users Management">
        <fx:include fx:id="usersManagementComponent" source="usersManagement/UsersManagement.fxml"/>
    </Tab>
    <Tab fx:id="rolesManagementTab" closable="false" text="Roles Management">
        <fx:include fx:id="rolesManagementComponent" source="rolesManagement/RolesManagement.fxml"/>
    </Tab>
    <Tab fx:id="executionsHistoryTab" closable="false" text="Executions History">
        <fx:include fx:id="executionHistoryComponent" source="executionHistory/ExecutionHistory.fxml" />
    </Tab>
    <Tab fx:id="statisticsTab" closable="false" text="Statistics">
        <fx:include fx:id="statisticsComponent" source="statistics/Statistics.fxml" />
    </Tab>
    <Tab fx:id="settingsTab" closable="false" text="Settings">
        <fx:include fx:id="settingsComponent" source="settings/Settings.fxml" />
    </Tab>
</TabPane>
